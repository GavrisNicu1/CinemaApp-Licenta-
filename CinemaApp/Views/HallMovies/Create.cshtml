@model CinemaApp.Models.HallMovie

@{
    ViewData["Title"] = "Adaugă film într-o sală";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="MovieId" class="control-label">Film</label>
        <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HallId" class="control-label">Sală</label>
        <select asp-for="HallId" class="form-control" asp-items="ViewBag.HallId"></select>
        <span asp-validation-for="HallId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label">Dată început</label>
        <input asp-for="StartDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="control-label">Dată sfârșit</label>
        <input asp-for="EndDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Adaugă" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Înapoi</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
