@using CinemaApp.Models
@model Reservation

@{
    ViewData["Title"] = "Finalizează rezervarea";
}

<h2>Finalizează rezervarea</h2>

<form asp-action="CompleteReservation" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Prenume</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Nume</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Telefon</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <!-- HIDDEN fields -->
    <input type="hidden" asp-for="SeatNumber" value="@ViewBag.SeatNumber" />
    <input type="hidden" asp-for="HallId" value="@ViewBag.HallId" />
    <input type="hidden" asp-for="MovieId" value="@ViewBag.MovieId" />
    <input type="hidden" asp-for="ReservationDate" value="@ViewBag.ReservationDate.ToString("yyyy-MM-ddTHH:mm:ss")" />

    <button type="submit" class="btn btn-success">Confirmă rezervarea</button>
</form>
